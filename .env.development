APP_NAME="School Attendance System"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=43200

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Security Settings
SESSION_EXPIRE_ON_CLOSE=false
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,localhost:8000,127.0.0.1:8000

# Face Recognition Settings
FACE_RECOGNITION_ENABLED=true
FACE_CONFIDENCE_THRESHOLD=0.8
FACE_MODELS_PATH=public/models

# GPS Verification Settings
GPS_VERIFICATION_ENABLED=true
GPS_RADIUS_METERS=100

# Development Tools
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=true
APP_TIMEZONE=Asia/Jakarta

# Performance Settings
CACHE_PREFIX=attendance_
SESSION_COOKIE=attendance_session
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# Database Performance
DB_FOREIGN_KEYS=true
DB_JOURNAL_MODE=WAL
DB_SYNCHRONOUS=NORMAL
DB_CACHE_SIZE=10000

# API Settings
API_RATE_LIMIT=60
API_PAGINATION_LIMIT=50

# File Upload Settings
MAX_UPLOAD_SIZE=10240
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,xlsx,csv

# Attendance Settings
ATTENDANCE_BUFFER_MINUTES=15
LATE_THRESHOLD_MINUTES=10
OVERTIME_THRESHOLD_HOURS=8

# Leave Settings
DEFAULT_ANNUAL_LEAVE_DAYS=12
DEFAULT_SICK_LEAVE_DAYS=12
LEAVE_APPROVAL_REQUIRED=true

# Payroll Settings
PAYROLL_CURRENCY=IDR
PAYROLL_TAX_RATE=0.05
OVERTIME_MULTIPLIER=1.5

# Notification Settings
NOTIFICATION_CHANNELS=database,mail
PUSH_NOTIFICATIONS_ENABLED=false

# Security Headers
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY_ENABLED=true

# Development Database
DB_FOREIGN_KEYS=true
DB_QUERY_LOGGING=true